<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create News Post</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .create-news-container {
      background-color: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      border: 2px solid #c5c7c8;
    }

    .create-news-container h1 {
      font-size: 24px;
      margin-bottom: 20px;
      text-align: center;
    }

    .btn-custom {
      background-color: #007bff;
      color: white;
    }

    .btn-custom:hover {
      background-color: #0056b3;
    }

    .error-message {
      color: red;
      font-size: 14px;
    }
  </style>
</head>

<body>

  <div class="create-news-container">
    <h1>Create a News Post</h1>

    <div id="error-message" class="error-message"></div>

    <form id="createNewsForm" action="/admin/create-news" method="POST">
      <div class="mb-3">
        <label for="content" class="form-label">News Content:</label>
        <textarea name="content" id="content" class="form-control" rows="5"></textarea>
      </div>

      <div class="mb-3">
        <label for="priority" class="form-label">Priority:</label>
        <select name="priority" id="priority" class="form-select">
          <option value="high">High</option>
          <option value="medium" selected>Medium</option>
          <option value="low">Low</option>
        </select>
      </div>

      <button type="submit" class="btn btn-custom btn-lg w-100">Create News Post</button>
    </form>

    <br>

    <div class="text-center">
      <a href="/admin/dashboard">Back to Dashboard</a>
    </div>
    <div class="text-center mt-2">
      <a href="/auth/logout">Logout</a>
    </div>
  </div>

  <script>
    document.getElementById('createNewsForm').addEventListener('submit', function (e) {
      const content = document.getElementById('content').value.trim();
      const priority = document.getElementById('priority').value;
      const errorMessageDiv = document.getElementById('error-message');
      errorMessageDiv.innerHTML = '';

      let message = '';

      if (!content) {
        message = 'Content cannot be empty.';
      } else if (!priority) {
        message = 'Priority is required.';
      }

      if (message) {
        e.preventDefault();
        errorMessageDiv.innerHTML = message;
      }
    });
  </script>

</body>

</html>